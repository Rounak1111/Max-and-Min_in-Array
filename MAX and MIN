//finding maximum and minimum
public class max_min_in_Array {
    public static void main(String[] args) {

       int arr[]={10,30,50,20};
       int max=0,min=0;
       int i;
       for(i=0;i<arr.length;i++){
        if (arr[i]>max) 
        {
          max=arr[i];
        }
        else if(arr[i]>min)
        {
         min=arr[i];
        }
        
       }
       System.out.println("The maximum value = "+max);
       System.out.println("The minimum value = "+min);


    }
    
}
